{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": false
    },
    "storybook": {
      "dependsOn": ["^storybook"]
    },
    "publish-package": {
      "dependsOn": ["^publish-package"]
    }
  }
}
